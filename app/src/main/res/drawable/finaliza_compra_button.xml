<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape>
            <solid android:color="#8e8f93" />
            <stroke android:width="0.1dp" android:color="#737477" />
            <corners android:radius="5dp" />
        </shape>
    </item>

    <item android:state_focused="false" android:state_pressed="false">
        <shape>
            <solid android:color="#409b29" />
            <stroke android:width="0.1dp" android:color="#2c721a" />
            <corners android:radius="5dp" />
        </shape>
    </item>

    <item android:state_focused="true" android:state_pressed="true">
        <shape>
            <solid android:color="#2c721a" />
            <stroke android:width="0.1dp" android:color="#409b29" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    <item android:state_focused="false" android:state_pressed="true">
        <shape>
            <solid android:color="#2c721a" />
            <stroke android:width="0.1dp" android:color="#409b29" />
            <corners android:radius="5dp" />
        </shape>
    </item>
</selector>