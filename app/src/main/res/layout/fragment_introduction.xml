<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp"
    tools:context="com.emersonlima.carrinhointeligente.ActIntroduction">
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="36dp"
        android:text="Termos e condições"
        android:textColor="@android:color/black"
        android:textSize="26sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="horizontal"
        android:layout_height="250dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/termsConditions" />
        </LinearLayout>
    </ScrollView>
    <CheckBox
        android:buttonTint="@color/blue"
        android:shadowColor="@color/blue_900"
        android:id="@+id/cb_concordo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Concordo com os termos e cnodições de serviços"
        android:textAlignment="center"
        android:textColor="@android:color/black" />
</LinearLayout>
