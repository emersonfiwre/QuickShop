<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="0dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="3dp"
    app:cardMaxElevation="3dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/click_view_item">

        <ImageView
            android:id="@+id/iv_produto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:src="@null" />

        <TextView
            android:id="@+id/discount_porcent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_produto"
            android:paddingEnd="0dp"
            android:paddingLeft="16dp"
            android:paddingRight="0dp"
            android:paddingStart="16dp"
            android:paddingTop="24dp"
            android:text="11,2% OFF"
            android:textColor="@color/lred"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_produto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/discount_porcent"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingEnd="0dp"
            android:paddingLeft="16dp"
            android:paddingRight="0dp"
            android:paddingStart="16dp"
            android:paddingTop="24dp"
            android:text="Café pilão super"
            android:textColor="@color/colorPrimarytext"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_valor_atual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_produto"
            android:paddingEnd="0dp"
            android:paddingLeft="16dp"
            android:paddingRight="0dp"
            android:paddingStart="16dp"
            android:paddingTop="18dp"
            android:text="DE: R$100,00"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_valor_desconto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_valor_atual"
            android:paddingBottom="24dp"
            android:paddingEnd="4dp"
            android:paddingLeft="16dp"
            android:paddingRight="4dp"
            android:paddingStart="16dp"
            android:paddingTop="18dp"
            android:text="POR: R$88,80"
            android:textColor="@color/darkblue"
            android:textSize="18sp"
            android:textStyle="bold" />
        <!--TextView
            android:id="@+id/tv_valor_desconto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_produto"
            android:layout_centerHorizontal="true"
            android:maxLines="1"
            android:paddingBottom="24dp"
            android:paddingLeft="16dp"
            android:paddingTop="18dp"
            android:text="POR: R$88,80  "
            android:textColor="@color/darkblue"
            android:textSize="14sp"
            android:textStyle="bold" /-->

    </RelativeLayout>
</android.support.v7.widget.CardView>